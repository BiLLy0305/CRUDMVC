@model List<FacturaBC.Models.ViewModels.ListFacturasEncVM>
@{
    ViewBag.Title = "Facturas";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:6px">
    <a href="~/FacturaEnc/Nuevo" class="btn btn-primary">Nueva Factura</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Codigo
                </th>
                <th>
                    Cliente
                </th>
                <th>
                    Fecha
                </th>
               
            </tr>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.codigo</td>
                    <td>@obj.nombreCliente</td>
                    <td>@obj.fecha</td>
                  
                    <td>
                        <a class="btn btn-warning" href="~/Cliente/Editar/@obj.codigo">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="~/Cliente/Eliminar/@obj.codigo">Eliminar</a>
                    </td>
                </tr>

            }
        </table>
    </div>
</div>



